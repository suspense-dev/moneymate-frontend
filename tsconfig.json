{
  "compilerOptions": {
    "target": "ES5",
    "jsx": "react-native",
    "lib": [
      "dom",
      "esnext"
    ],
    "strict": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "pretty": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "module": "esnext",
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@moneymate/*": [
        "./packages/*"
      ]
    }
  },
  "exclude": ["./node_modules"],
  "include": [
    "./src/**/*"
  ],
  "extends": "expo/tsconfig.base"
}
